<div class="page-width">
    <div class="grid">
        {%- for block in section.blocks -%}
        <div
            class="grid__item {%- if block.settings.fullscreen != false -%}one-whole {%- else %} small--one-whole medium-up--one-half{%- endif -%}">



        </div>
        {%- endfor -%}
    </div>
</div>
{% schema %}
{
"name": "Link Grid",
"blocks": [{
"type": "slide",
"name": "Link Block",
"settings":[
{
"type": "text",
"id": "subtitle",
"label": "Unterüberschrift"
},
{
"type": "text",
"id": "title",
"label": "Überschrift"
},
{
"type": "color",
"id": "gradient-first",
"label": "Erste Farbe des Verlaufs"
},
{
"type": "color",
"id": "gradient-second",
"label": "Zweite Farbe des Verlaufs"
},
{
"type": "checkbox",
"id": "fullscreen",
"label": "Fullscreen?"
},
{
"type": "image_picker",
"id": "background_image",
"label": "Hintergrundbild?"
}
]
}],
"presets":[{
"name": "Link Grid",
"category": "picture"
}]
}
{% endschema %}