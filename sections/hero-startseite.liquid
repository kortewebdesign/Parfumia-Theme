<section id="hero-startseite" class="grid"
    style="background: url('{{section.settings.background_image | img_url: scale:2}}') no-repeat">
    <div class="grid__item small--one-whole medium-up--one-half">
        {% if section.settings.headline != blank %}
        <h1>{{section.settings.headline}}</h1>
        {% endif %}
        {% if section.settings.headline != blank %}
        <a class="btn" href="{{section.settings.link_destination}}">{{section.settings.link_text}}</a>
        {% endif %}
    </div>
    <div class="grid__item small--hide medium-up--one-half">
    </div>
</section>
{%- schema -%}
{
"name": "Startscreen Top Hero",
"settings":[
{
"type": "image_picker",
"id": "background_image",
"label": "Hintergrund Bild"
},
{
"type": "richtext",
"id": "headline",
"label": "Ãœberschrift"
},
{
"type": "richtext",
"id": "description",
"label": "Text"
},
{
"type": "text",
"id": "link_text",
"label": "Link Text"
},
{
"type": "text",
"id": "link_destination",
"label": "Link"
}
],
"presets": [
{
"name": "Slideshow"
}
]
}
{%- endschema -%}