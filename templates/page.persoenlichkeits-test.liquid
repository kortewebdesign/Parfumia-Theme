<script>
    function showNextPage() {
        let currentPage = document.querySelector(".form-page:not([style*='display: none'])");
        let nextPage = currentPage.nextElementSibling;

        if (currentPage != document.getElementById('last-form-page')) {
            currentPage.style.display = "none";
            nextPage.style.display = "block";
        }
        else {
            document.getElementsByClassName(".btn__next").addClass("disabled")
        }

        currentPage = document.querySelector(".form-page:not([style*='display: none'])");

